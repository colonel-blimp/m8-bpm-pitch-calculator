doctype html
html
  head
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(charset='UTF-8')
    title My PWA
    link(rel='stylesheet' href='styles/styles.css')
      

  body
    .container
      .number-box
        label(for='from-bpm') From BPM
        input(type='number' id='from-bpm' inputmode='numeric' placeholder='120')
      .number-box
        label(for='to-bpm') To BPM
        input(type='number' id='to-bpm' inputmode='numeric' placeholder='140')
      .box
        .number-box
          label(for='display-box') Semitones
          input(id='display-box' readonly=true)
        .number-box
          label(for='display-box-hex') Semitones (Hex)
          input(id='display-box-hex' readonly=true)
      
    script(src='js/app.js')

